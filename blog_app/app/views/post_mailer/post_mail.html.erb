<h1>Email-рассылка новостей</h1>

<table>
  <thead>
    <tr>
      <th>Опубликована</th>
      <th>Заголовок</th>
      <th>Содержимое</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.sort{|x,y| y.created_at <=> x.created_at}.each do |post| %>
      <tr>
        <td><%= post.created_at %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
